{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "outDir": "./lib",
    "baseUrl": ".",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["*", "lib/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
